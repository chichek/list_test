<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	app:cardBackgroundColor="@android:color/white"
	app:cardCornerRadius="@dimen/product_item_radius"
	app:cardElevation="@dimen/cardview_default_elevation">

<LinearLayout
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:padding="@dimen/product_item_padding"
	android:orientation="vertical">

	<ImageView
		android:id="@+id/product_item_layout_image"
		android:layout_width="wrap_content"
		android:maxWidth="350dp"
		android:layout_gravity="center"
		android:scaleType="centerInside"
		android:layout_height="wrap_content"
		android:contentDescription="@string/product_image" />

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal">

		<TextView
			android:id="@+id/product_item_layout_name"
			android:layout_width="0dp"
			style="@style/Base.TextAppearance.AppCompat.Caption"
			android:layout_height="wrap_content"
			android:layout_weight="3" />

		<TextView
			android:id="@+id/product_item_layout_price"
			style="@style/Base.TextAppearance.AppCompat.Body2"
			android:layout_width="0dp"
			android:gravity="end"
			android:layout_height="wrap_content"
			android:layout_weight="1" />
	</LinearLayout>
</LinearLayout>
</android.support.v7.widget.CardView>